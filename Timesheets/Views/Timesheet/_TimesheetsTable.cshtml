@model List<Timesheets.Models.ProjectInfo>

<table id="projectinfo">
    <tr>
        <th>Project Name</th>
        <th>Total Hours</th>
        <th>Name</th>
        <th>Hours Worked</th>
        <th>Date</th>
    </tr>
    @if (@Model != null)
    {
        @foreach (var projectInfo in @Model)
        {
            <tr>
                <td>@projectInfo.Project</td>
                <td>@projectInfo.TotalHours</td>
                <td colspan="3"></td>
            </tr>
            @foreach (var workers in @projectInfo.Workers)
            {
                <tr>
                    <td colspan="2"></td>
                    <td>@workers.Name</td>
                    <td>@workers.HoursWorked</td>
                    <td>@workers.Date</td>
                </tr>
            }
        }
        
    }
</table>